<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalktimeFragment">


    <TextView
        android:id="@+id/Text_Walk_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="お散歩時間"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Text_Time_Setting"
        android:layout_width="98dp"
        android:layout_height="47dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:text="時間設定"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_Walk_Time" />

    <TextView
        android:id="@+id/Text_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="188dp"
        android:text="："
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_Walk_Time" />

    <Button
        android:id="@+id/button2"
        android:layout_width="241dp"
        android:layout_height="82dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/pink"
        android:text="完了"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_dot" />

</androidx.constraintlayout.widget.ConstraintLayout>