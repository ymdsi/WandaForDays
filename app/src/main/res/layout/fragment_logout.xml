<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogoutFragment">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:padding="0dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/before_24"
        app:layout_constraintEnd_toStartOf="@+id/Text_Logout"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/No_Button"
        android:layout_width="293dp"
        android:layout_height="112dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="56dp"
        android:backgroundTint="@color/gray"
        android:text="いいえ"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_Logout" />

    <TextView
        android:id="@+id/Text_Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="ログアウト"
        android:textSize="30dp"
        android:textColor="@color/brown2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Yes_Button"
        android:layout_width="293dp"
        android:layout_height="112dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="56dp"
        android:backgroundTint="@color/pink"
        android:text="はい"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_Logout" />

    <TextView
        android:id="@+id/Text_Logout_Mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="104dp"
        android:text="ログアウトしますか？"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_Logout" />

</androidx.constraintlayout.widget.ConstraintLayout>